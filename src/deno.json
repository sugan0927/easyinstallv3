{
  "name": "easyinstall-deno",
  "version": "1.0.0",
  "exports": "./src/index.ts",
  "tasks": {
    "dev": "deno run -A --watch --import-map=import_map.json src/index.ts",
    "deploy": "deployctl deploy --project=easyinstall-deno --import-map=import_map.json src/index.ts"
  },
  "compilerOptions": {
    "allowJs": true,
    "lib": ["deno.window"],
    "strict": true
  },
  "lint": {
    "include": ["src/"],
    "exclude": ["src/testdata/", "src/fixtures/**/*.ts"]
  },
  "fmt": {
    "include": ["src/"],
    "useTabs": true,
    "lineWidth": 80,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": true,
    "proseWrap": "preserve"
  }
}
